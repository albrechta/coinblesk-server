<?xml version='1.0' encoding='utf-8'?>
<Context>
	<!--the bitcoin network to run on. Set to mainnet for production environment -->
	<Parameter name="bitcoin.net" value="testnet" />

	<!--database settings-->
	<Parameter name="db.url" value="jdbc:postgresql:coinblesk" />
	<Parameter name="db.username" value="postgres" />
	<Parameter name="db.password" value="" />
	<Parameter name="db.hbm2ddl.auto" value="update" />
	<Parameter name="db.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
	<Parameter name="db.driver.class.name" value="org.postgresql.Driver" />

	<!--directory where the wallet files and private seed are stored-->
	<Parameter name="coinblesk.config.dir" value="/var/lib/coinblesk_webapp" />

	<!--the minimum amount of confirmations for transactions. INCREASE FOR PRODUCTION ENVIRONMENT! -->
	<Parameter name="bitcoin.minconf" value="0" />

</Context>
